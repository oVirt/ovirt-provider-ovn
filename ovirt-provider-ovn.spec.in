%{_libexecdir}/vdsm/vhostuser_permissions_setter
%{_libexecdir}/ovirt-provider-ovn
%{python_sitelib}/vdsm/tool/ovn_config.py*
%{_sysconfdir}/sudoers.d/50_vdsm_hook_ovirt_provider_ovn_hook
%license LICENSE


